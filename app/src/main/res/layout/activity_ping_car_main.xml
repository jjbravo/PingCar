<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ping_car_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.edurobotica.pingcar.pingcar.pingCarActivityMain">


    <Button

        android:text="Adelante"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="15sp"

        android:layout_width="100dp"
        android:layout_height="100dp"

        android:focusableInTouchMode="false"
        android:minWidth="120dip"
        android:minHeight="103dp"
        android:width="120dp"
        android:layout_marginTop="24dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/adelante" />

    <Button
        android:text="Derecha"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/derecha"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="15sp"
        android:layout_below="@+id/adelante"
        android:layout_toRightOf="@+id/adelante"
        android:layout_toEndOf="@+id/adelante" />

    <Button
        android:text="AtrÃ¡s"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="15sp"
        android:id="@+id/atras"
        android:layout_below="@+id/derecha"
        android:layout_toLeftOf="@+id/derecha"
        android:layout_toStartOf="@+id/derecha" />

    <Button
        android:text="Izquierda"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/izquierda"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="15sp"
        android:layout_below="@+id/adelante"
        android:layout_toLeftOf="@+id/adelante"
        android:layout_toStartOf="@+id/adelante" />
</RelativeLayout>
